# Database
# Connection string for self-hosted Supabase PostgreSQL
# Format: postgresql://postgres:[PASSWORD]@api.marcusgoll.com:5432/postgres
DATABASE_URL="postgresql://user:password@localhost:5432/marcusgoll"

# Optional: Direct database URL for migrations (bypasses connection pooling)
# DIRECT_DATABASE_URL="postgresql://user:password@localhost:5432/marcusgoll"

# Supabase
# Get these from your self-hosted Supabase instance
NEXT_PUBLIC_SUPABASE_URL="https://api.marcusgoll.com"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Ghost CMS
# Get from Ghost admin: Settings > Integrations > Custom Integration
GHOST_API_URL="https://ghost.marcusgoll.com"
GHOST_CONTENT_API_KEY="your-content-api-key"

# Optional: For Ghost Admin API (if needed)
# GHOST_ADMIN_API_KEY="your-admin-api-key"
